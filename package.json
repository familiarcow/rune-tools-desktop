{
  "name": "rune-tools-desktop",
  "productName": "Rune.Tools (beta)",
  "version": "0.2.19",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && vite build && cp src/preload.js dist/preload.js && cp -r images dist/renderer/",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "start": "npm run build && electron .",
    "dev": "concurrently \"tsc --watch\" \"vite\"",
    "dev:main": "tsc --watch",
    "dev:renderer": "vite",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "thorchain",
    "rune",
    "wallet"
  ],
  "author": "familiarcow",
  "license": "ISC",
  "description": "Tools for THORChain",
  "devDependencies": {
    "@types/bip39": "^2.4.2",
    "@types/node": "^24.9.1",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.11"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.36.1",
    "@cosmjs/crypto": "^0.36.1",
    "@cosmjs/encoding": "^0.36.1",
    "@cosmjs/proto-signing": "^0.36.1",
    "@cosmjs/stargate": "^0.36.1",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.12.2",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "jdenticon": "^3.3.0",
    "openpgp": "^6.2.2",
    "particles.js": "^2.0.0",
    "protobufjs": "^7.5.4",
    "qrcode": "^1.5.4",
    "secp256k1": "^5.0.1"
  },
  "build": {
    "appId": "com.familiarcow.runetools",
    "productName": "Rune.Tools (beta)",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "images/**/*",
      "node_modules/**/*"
    ],
    "afterSign": "build/afterSignHook.js",
    "mac": {
      "icon": "images/logos/odin.icns",
      "category": "public.app-category.productivity",
      "identity": "Tyler Bond (974SWJKYUP)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "notarize": true,
      "signIgnore": [
        "node_modules/secp256k1/prebuilds"
      ],
      "extendInfo": {
        "LSUIElement": false
      },
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ]
    },
    "win": {
      "icon": "images/logos/odin.png"
    },
    "linux": {
      "icon": "images/logos/odin.png"
    }
  }
}
